import string

def clean_text(text):

    no_punctuation = ""
    for char in text:
        if char not in string.punctuation:
            no_punctuation += char
    return no_punctuation.lower()

def count_words(cleaned_text):

    words = cleaned_text.split()
    word_count = {}

    for word in words:
        if word in word_count:
            word_count[word] += 1
        else:
            word_count[word] = 1

    return word_count

def find_frequent_words(dictionary, threshold=3):

    result = []
    for key in dictionary:
        if dictionary[key] > threshold:
            result.append(key)
    return result

if __name__ == "__main__":
    input_text = input("Введіть текст для аналізу:")

    processed_text = clean_text(input_text)
    frequencies = count_words(processed_text)

    print("Статистика слів:")
    for word in frequencies:
        print(f"{word}: {frequencies[word]}")

    frequent_words = find_frequent_words(frequencies, 3)

    if frequent_words:
        print("Слова, що зустрічаються більше 3 разів")
        print(", ".join(frequent_words))
    else:
        print("Немає слів, які зустрічаються більше 3 разів")
